generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Person {
  id        String   @id @default(cuid())
  email     String   @unique
  firstName String
  lastName  String
  churchId  String?  // Add the churchId field
  church    Church?  @relation(fields: [churchId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Response Response[]
}

model Church {
  id        String   @id @default(cuid())
  name      String  @unique
  address   String
  people    Person[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Response {
  id       String   @id @default(cuid())
  personId  String
  person    Person   @relation(fields: [personId], references: [id])
  
  AGP      Int
  AGP_1    Int
  AGP_2    Int
  AGP_3    Int
  AGP_4    Int
  AGP_5    Int
  AGP_6    Int
  AGP_7    Int
  AGP_8    Int
  AGP_9    Int
  EAS      Int
  EAS_1    Int
  EAS_2    Int
  EAS_3    Int
  SBE      Int
  SBE_1    Int
  SBE_2    Int
  SBE_3    Int
  MIC      Int
  MIC_1    Int
  MIC_2    Int
  MIC_3    Int
  RDDT     Int
  RDDT_1   Int
  RDDT_2   Int
  RDDT_3   Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}